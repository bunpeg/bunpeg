// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model files {
  id          String @id
  file_name   String
  upload_path String
}

model tasks {
  id          String  @id
  file_id     String
  pid         Int
  status      String // 'queued' | 'processing' | 'completed' | 'failed'
  output_path String?
  error       String?
}
